name: cl

env:
  IMAGE_NAME: testcicd
  IMAGE_TAG: 1.1.0
  DOCKER_HUB_REGISTRY: hadjimansour

on:
  workflow_dispatch:

jobs:
  docker:
    runs-on: SUPTECH

    steps:
      - name: Récupérer le code
        uses: actions/checkout@v4

      - name: Test des variables
        run: |
          echo "Variable GitHub MONVAR : ${{ vars.MONVAR }}"
          echo "IMAGE_NAME : $IMAGE_NAME"
          echo "IMAGE_TAG : $IMAGE_TAG"
          echo "DOCKER_HUB_REGISTRY : $DOCKER_HUB_REGISTRY"

      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Build de l'image Docker
        run: |
          docker build -t $DOCKER_HUB_REGISTRY/$IMAGE_NAME:$IMAGE_TAG .

      - name: Test de l'image Docker
        run: |
          docker image ls $DOCKER_HUB_REGISTRY/$IMAGE_NAME:$IMAGE_TAG

      - name: Push de l'image Docker
        run: |
          docker push $DOCKER_HUB_REGISTRY/$IMAGE_NAME:$IMAGE_TAG
